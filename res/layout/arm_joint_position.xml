<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dip"
    android:title="@string/controller_normal" >

	<LinearLayout android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:paddingBottom="10dip">
		<TextView
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="@string/arm_joint_position"
		    android:textSize="20dip" />
		<ImageView
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	        android:paddingLeft="80dip"
	        android:scaleType="fitStart"
	        android:src="@drawable/help00" 
	        android:id= "@+id/help_button" />
	</LinearLayout>
	
	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:paddingTop = "30dip"
		android:orientation="vertical">
		<RelativeLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:paddingTop="5dip"
			android:paddingBottom = "5dip">
			<TextView android:text="@string/joint_1"
				android:gravity="left"
				android:paddingTop="5dip"
				android:textSize = "20dip"
				android:layout_width = "wrap_content"
				android:layout_height= "wrap_content"
				android:layout_gravity = "center_vertical"/>
			<RelativeLayout android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:paddingLeft = "90dip">
				<EditText
				     android:id="@+id/entry_joint_1"
				     android:layout_width="90dip"
				     android:layout_height="wrap_content"
				     android:maxLength="7"
				     android:inputType="numberSigned|numberDecimal|number"
				     android:background="@android:drawable/editbox_background" />
			</RelativeLayout>
			<LinearLayout android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:paddingLeft = "190dip">
				<ImageView android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:src="@drawable/minus"
					android:id="@+id/minus_joint_1"/>
				<LinearLayout android:layout_width="10dip"
				android:layout_height="fill_parent" />
				<ImageView android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:src="@drawable/plus"
					android:id="@+id/plus_joint_1"/>
			</LinearLayout>
		</RelativeLayout>
		<RelativeLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:paddingBottom = "5dip"
			android:paddingTop="5dip">
			<TextView android:text="@string/joint_2"
				android:gravity="left"
				android:paddingTop="5dip"
				android:textSize = "20dip"
				android:layout_width = "wrap_content"
				android:layout_height= "wrap_content"
				android:layout_gravity = "center_vertical"/>
			<RelativeLayout android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:paddingLeft = "90dip">
				<EditText
				     android:id="@+id/entry_joint_2"
				     android:layout_width="90dip"
				     android:layout_height="wrap_content"
				     android:maxLength="7"
				     android:inputType="numberSigned|numberDecimal|number"
				     android:background="@android:drawable/editbox_background" />
			</RelativeLayout>
			<LinearLayout android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:paddingLeft = "190dip">
				<ImageView android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:src="@drawable/minus"
					android:id="@+id/minus_joint_2"/>
				<LinearLayout android:layout_width="10dip"
				android:layout_height="fill_parent" />
				<ImageView android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:src="@drawable/plus"
					android:id="@+id/plus_joint_2"/>
			</LinearLayout>
		</RelativeLayout>
		<RelativeLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:paddingBottom = "5dip"
			android:paddingTop="5dip">
			<TextView android:text="@string/joint_3"
				android:gravity="left"
				android:paddingTop="5dip"
				android:textSize = "20dip"
				android:layout_width = "wrap_content"
				android:layout_height= "wrap_content"
				android:layout_gravity = "center_vertical"/>
			<RelativeLayout android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:paddingLeft = "90dip">
				<EditText
				     android:id="@+id/entry_joint_3"
				     android:layout_width="90dip"
				     android:layout_height="wrap_content"
				     android:maxLength="7"
				     android:inputType="numberSigned|numberDecimal|number"
				     android:background="@android:drawable/editbox_background" />
			</RelativeLayout>
			<LinearLayout android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:paddingLeft = "190dip">
				<ImageView android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:src="@drawable/minus"
					android:id="@+id/minus_joint_3"/>
				<LinearLayout android:layout_width="10dip"
				android:layout_height="fill_parent" />
				<ImageView android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:src="@drawable/plus"
					android:id="@+id/plus_joint_3"/>
			</LinearLayout>
		</RelativeLayout>
		<RelativeLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:paddingBottom = "5dip"
			android:paddingTop="5dip">
			<TextView android:text="@string/joint_4"
				android:gravity="left"
				android:paddingTop="5dip"
				android:textSize = "20dip"
				android:layout_width = "wrap_content"
				android:layout_height= "wrap_content"
				android:layout_gravity = "center_vertical"/>
			<RelativeLayout android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:paddingLeft = "90dip">
				<EditText
				     android:id="@+id/entry_joint_4"
				     android:layout_width="90dip"
				     android:layout_height="wrap_content"
				     android:maxLength="7"
				     android:inputType="numberSigned|numberDecimal|number"
				     android:background="@android:drawable/editbox_background" />
			</RelativeLayout>
			<LinearLayout android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:paddingLeft = "190dip">
				<ImageView android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:src="@drawable/minus"
					android:id="@+id/minus_joint_4"/>
				<LinearLayout android:layout_width="10dip"
				android:layout_height="fill_parent" />
				<ImageView android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:src="@drawable/plus"
					android:id="@+id/plus_joint_4"/>
			</LinearLayout>
		</RelativeLayout>
		<RelativeLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:paddingBottom = "5dip"
			android:paddingTop="5dip">
			<TextView android:text="@string/joint_5"
				android:gravity="left"
				android:paddingTop="5dip"
				android:textSize = "20dip"
				android:layout_width = "wrap_content"
				android:layout_height= "wrap_content"
				android:layout_gravity = "center_vertical"/>
			<RelativeLayout android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:paddingLeft = "90dip">
				<EditText
				     android:id="@+id/entry_joint_5"
				     android:layout_width="90dip"
				     android:layout_height="wrap_content"
				     android:maxLength="7"
				     android:inputType="numberSigned|numberDecimal|number"
				     android:background="@android:drawable/editbox_background" />
			</RelativeLayout>
			<LinearLayout android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:paddingLeft = "190dip">
				<ImageView android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:src="@drawable/minus"
					android:id="@+id/minus_joint_5"/>
				<LinearLayout android:layout_width="10dip"
				android:layout_height="fill_parent" />
				<ImageView android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:src="@drawable/plus"
					android:id="@+id/plus_joint_5"/>
			</LinearLayout>
		</RelativeLayout>
	</LinearLayout>
	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:paddingTop="20dip"
		android:paddingBottom="20dip"
		android:paddingLeft= "10dip">
		<RadioButton android:id="@+id/radio_degree"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/degree" />
		<RadioButton android:id="@+id/radio_radian"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:paddingRight="20dip"
          android:text="@string/radian" />
	</LinearLayout>
	
	<LinearLayout android:layout_width="wrap_content"
			android:paddingTop = "20dip"
			android:layout_height="wrap_content"
			android:gravity = "bottom"
			android:orientation="horizontal">
			<Button
	   			android:id="@+id/send_button"
				android:text="@string/send"
				android:textSize="15dip"
				android:layout_height="wrap_content"
				android:layout_width="150dip"
				android:layout_weight="1"/>
			<Button
				android:id="@+id/change_mode"
				android:text="@string/controller_switch_mode"
				android:textSize="15dip"
				android:layout_height="wrap_content"
				android:layout_width="150dip"
				android:layout_weight="1"/>
		</LinearLayout>  
</LinearLayout>