<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="#990000"
                android:endColor="#CC0000"
                android:angle="90" />
            <stroke
                android:width="1dp"
                android:color="#000000" />
            <corners
                android:radius="5dp" />
            <padding
                android:left="2dp"
                android:top="2dp"
                android:right="2dp"
                android:bottom="2dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:startColor="#FF6600"
		        android:endColor="#FF6600"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#000000" />
            <corners
                android:radius="5dp" />
            <padding
                android:left="2dp"
                android:top="2dp"
                android:right="2dp"
                android:bottom="2dp" />
        </shape>
    </item>

    <item>        
        <shape>
            <gradient
                android:startColor="#FF6600"
                android:endColor="#FF6600"
                android:angle="90" />
            <stroke
                android:width="1dp"
                android:color="#000000" />
            <corners
                android:radius="5dp" />
            <padding
                android:left="2dp"
                android:top="2dp"
                android:right="2dp"
                android:bottom="2dp" />
        </shape>
    </item>
</selector>