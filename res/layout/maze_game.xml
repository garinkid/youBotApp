<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="320dp"
	android:layout_height="420dp"
	android:orientation="vertical"
	android:layout_gravity="center"
	android:padding="20dip">	
		<LinearLayout android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="horizontal">
			<TextView
			    	android:text="@string/gripper"
			    	android:textSize="15sp"
			    	android:layout_height="wrap_content"
			    	android:layout_width="80dp" />
			<Button	android:id="@+id/gripper_open"
					android:text="@string/open"
					android:textSize="12sp"
					android:layout_height="wrap_content"
					android:layout_width="100dip"/>
			<Button	android:id="@+id/gripper_close"
					android:text="@string/close"
					android:textSize="12sp"
					android:layout_height="wrap_content"
					android:layout_width="100dip"/>
		</LinearLayout>
		
		<View
        android:layout_width="fill_parent"
        android:layout_height="10dp">
    	</View>
		
		<TextView android:layout_width="wrap_content"
		    android:layout_height = "wrap_content"
		    android:text="@string/game_sensitivity"
		    android:textSize="15sp"/>
		
		<View android:layout_width="fill_parent"
        	android:layout_height="10dp">
    	</View>
		
		<SeekBar android:id="@+id/game_sensitivity_seekbar"
		  android:layout_width="fill_parent"
		  android:layout_height="wrap_content"
		  android:paddingLeft="10dip"
		  android:paddingRight="10dip"
		  android:progressDrawable="@drawable/slider_main"
		  android:thumb="@drawable/slider" />
		
		<View android:layout_width="fill_parent"
        	android:layout_height="30dp">
    	</View>
		
		<LinearLayout android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center"
		android:orientation="horizontal">
		<Button	android:id="@+id/reset_position"
			android:text="@string/reset_pose"
			android:textSize="15sp"
			android:layout_height="60dip"
			android:layout_gravity="center"
			android:layout_width="80dip"/>
		<ToggleButton android:id = "@+id/game_status_toggle_button"
		   	android:textOn = "@string/game_stop"
		   	android:textOff = "@string/game_start"
		   	android:layout_width = "140dip"
		   	android:textSize="15sp"
		   	android:layout_gravity="center"
		   	android:layout_height = "60dip"/>
		</LinearLayout>
		
</LinearLayout>