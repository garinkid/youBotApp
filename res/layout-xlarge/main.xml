<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" 
 	android:padding="20dp"
	android:background="@drawable/kuka_portrait" >
	<TextView android:layout_width = "fill_parent"
	    	android:layout_height="0dp"
	   		android:layout_weight = "0.2"
	    	android:text="@string/title" android:textSize = "55sp"
	    	android:textStyle="bold"
	    	android:shadowColor = "#FF6600"
	    	android:textColor= "#FF6600"
	    	android:gravity="center"/>
	<ScrollView
	    android:layout_width="wrap_content"
	    android:layout_height="0dp"
	    android:layout_weight="0.6"
	    android:padding="30dp"
	    android:scrollbarStyle="insideInset"
	    android:fadeScrollbars="false">
	    <LinearLayout
	 	    android:orientation="vertical"
		   	android:layout_width="fill_parent"
		   	android:layout_height="0dp">
		    <Button	android:text="@string/select_device"
		    	android:id="@+id/select_device_button"
		    	style="@style/button_main_menu_xlarge" />
		    <View style="@style/empty_height_xlarge" />
		    <Button	android:text="@string/arm_controller"
		    	android:id="@+id/manipulator_button"
		    	style="@style/button_main_menu_xlarge"/>
		   <View style="@style/empty_height_xlarge" /> 
		   <Button	android:text="@string/base_controller"
			    	android:id="@+id/controller_button"
			    	style="@style/button_main_menu_xlarge" />
		   <View style="@style/empty_height_xlarge" />
			    <Button android:text="@string/maze"
					android:id="@+id/maze_game"
					style="@style/button_main_menu_xlarge"/>  
		   <View style="@style/empty_height_xlarge" />
		   		<Button android:text="@string/help"
					android:id="@+id/help_button"
					style="@style/button_main_menu_xlarge"/>
		   <View style="@style/empty_height_xlarge" />
		   		<Button android:text="@string/quit"
					android:id="@+id/quit_button"
					style="@style/button_main_menu_xlarge"/> 		
		</LinearLayout>
	</ScrollView>
	<LinearLayout android:layout_height="0dp"
	    android:layout_width="fill_parent"
	    android:layout_weight="0.2">
	 	<TextView android:layout_height = "fill_parent"
	    	android:layout_width = "fill_parent"
	    	android:text = "@string/copyright_text_portrait"
	    	android:textSize = "20sp"
	    	android:textStyle = "italic"
	    	android:gravity="right|center_vertical"/>		    	    	
	</LinearLayout>
</LinearLayout>
