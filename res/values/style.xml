<?xml version="1.0" encoding="utf-8"?>
<resources>
   <style name="button_main_menu">
		<item name="android:layout_width">160dp</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:background">@layout/common_button_color</item>
		<item name="android:paddingTop">10dp</item>
		<item name="android:paddingBottom">10dp</item>
		<item name="android:paddingLeft">25dp</item>
		<item name="android:textSize">15sp</item>
		<item name="android:textColor">#FFFFFF</item>
		<item name="android:gravity">left</item>
    </style>
    
    <style name="common_button_weighted">
		<item name="android:layout_width">0dp</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:gravity">center</item>
		<item name="android:textSize">15sp</item>
    </style>
    
    <style name="joint_velocity_seekbar">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:paddingRight">10dp</item>
		<item name="android:paddingLeft">10dp</item>
		<item name="android:progressDrawable">@drawable/slider_main</item>
		<item name="android:thumb">@drawable/slider</item>
    </style>
    
    <style name="joint_text">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">fill_parent</item>
		<item name="android:gravity">center_vertical</item>
		<item name="android:textSize">20sp</item>
    </style>
    
    <style name="joint_position_edit_text">
		<item name="android:layout_width">90dip</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textSize">16dp</item>
		<item name="android:maxLength">7</item>
		<item name="android:inputType">numberSigned|numberDecimal|number</item>
    </style>
    
    <style name="joint_position_plus_minus_button">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">fill_parent</item>
		<item name="android:gravity">center_vertical</item>
		<item name="android:adjustViewBounds">true</item>
		<item name="android:scaleType">centerCrop</item>
		<item name="android:paddingTop">5dp</item>
		<item name="android:paddingBottom">5dp</item>
    </style>
    
    <style name="empty_width">
		<item name="android:layout_width">15dp</item>
		<item name="android:layout_height">fill_parent</item>
    </style>
    
    <style name="empty_height">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">15dp</item>
    </style>

</resources>