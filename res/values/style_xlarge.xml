<?xml version="1.0" encoding="utf-8"?>
<resources>
   <style name="button_main_menu_xlarge">
		<item name="android:layout_width">350dp</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:background">@layout/common_button_color</item>
		<item name="android:paddingTop">20dp</item>
		<item name="android:paddingBottom">20dp</item>
		<item name="android:paddingLeft">30dp</item>
		<item name="android:textSize">35sp</item>
		<item name="android:textColor">#FFFFFF</item>
		<item name="android:gravity">left</item>
    </style>
    
    <style name="common_button_weighted_xlarge">
		<item name="android:layout_width">0dp</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:gravity">center</item>
		<item name="android:textSize">30sp</item>
    </style>
    
    <style name="empty_width_xlarge">
		<item name="android:layout_width">45dp</item>
		<item name="android:layout_height">fill_parent</item>
    </style>
    
    <style name="empty_height_xlarge">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">45dp</item>
    </style>
    
    <style name="joint_velocity_seekbar_xlarge">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">60dp</item>
		<item name="android:minHeight">10dp</item>
		<item name="android:maxHeight">15dp</item>
		<item name="android:paddingRight">20dp</item>
		<item name="android:paddingLeft">20dp</item>
		<item name="android:progressDrawable">@drawable/slider_main</item>
		<item name="android:thumb">@drawable/slider</item>
    </style>
    
    <style name="joint_text_xlarge">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">fill_parent</item>
		<item name="android:gravity">center_vertical</item>
		<item name="android:textSize">35sp</item>
    </style>
    
    <style name="joint_position_edit_text_xlarge">
		<item name="android:layout_width">180dip</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textSize">30dp</item>
		<item name="android:maxLength">7</item>
		<item name="android:inputType">numberSigned|numberDecimal|number</item>
    </style>
    
    <style name="joint_position_plus_minus_button_xlarge">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">fill_parent</item>
		<item name="android:gravity">center_vertical</item>
		<item name="android:adjustViewBounds">true</item>
		<item name="android:scaleType">centerCrop</item>
		<item name="android:paddingTop">10dp</item>
		<item name="android:paddingBottom">10dp</item>
    </style>
</resources>